        <Button Click="Back_Button_Click" Content="&lt;" Margin="248,0,0,2" RenderTransformOrigin="0.441,0.696" HorizontalAlignment="Left" Width="21"/>
        <TextBox x:Name="RoleID" TextWrapping="Wrap"  Margin="70,22,0,0" Grid.Row="3" HorizontalAlignment="Left" Width="182"/>
        <Label FontSize="6" Margin="70,5,37,39" Grid.Row="4" Content="1 - админ, 2 - менеджер, 3 - пользователь"></Label>


    </Grid>
</Window>
